<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet href="https://moise-exceptions.sourceforge.io/xml/os.xsl" type="text/xsl" ?>

<organisational-specification
    id="prescription_org" os-version="1.0"
    
    xmlns="https://moise-exceptions.sourceforge.io/os"
    
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://moise-exceptions.sourceforge.io/os https://moise-exceptions.sourceforge.io/xml/0.3/os.xsd">

    <structural-specification>

        <role-definitions>
            <role id="patient" />
            <role id="doctor" />
            <role id="pharmacist" />
        </role-definitions>

        <group-specification id="prescription_group">
            <roles>
                <role id="patient" min="1" max="1" />
                <role id="doctor" min="1" max="1" />
                <role id="pharmacist" min="1" max="1" />
            </roles>
        </group-specification>

    </structural-specification>

    <functional-specification>

        <scheme id="prescription_sch">

            <goal id="therapy" ttf="5 days">
                <plan operator="parallel">
                    <goal id="cpm">
                        <plan operator="sequence">
                            <goal id="complain" />
                            <goal id="prescribe" />
                            <goal id="medicine" />
                        </plan>
                    </goal>
                    <goal id="takePills" ttf="1 day" />
                </plan>
            </goal>

            <notification-policy id="np1" target="takePills" condition="unfulfilled(obligation(_,_,done(_,takePills,_),_))">

                <exception-specification id="missingPrescribePatient">
                    <exception-argument id="firstSendingDate" arity="1" />
                    <raising-goal id="raiseMissingPrescribePatient" when="not satisfied(_,prescribe)" /> <!-- askToDoctor -->
                    <handling-goal id="handleMissingPrescribePatient" />
                </exception-specification>

                <exception-specification id="missingMedicine">
                    <exception-argument id="firstSendingDate" arity="1" />
                    <exception-argument id="doctorId" arity="1" />
                    <raising-goal id="raiseMissingMedicine" when="satisfied(_,prescribe)" /> <!-- askToPharmacist -->
                    <handling-goal id="handleMissingMedicine1" when="satisfied(_,medicine)" /> <!-- resendMedicine -->
                    <handling-goal id="handleMissingMedicine2" when="not satisfied(_,medicine)" /> 
                </exception-specification>

                <exception-specification id="missingPrescribePharmacist">
                    <exception-argument id="patientId" arity="1" />
                    <exception-argument id="firstSendingDate" arity="1" />
                    <raising-goal id="raiseMissingPrescribePharmacist" when="satisfied(_,prescribe) &amp; failed(_,medicine)" />
                    <!--<raising-goal id="raiseMissingPrescribePharmacist" when="satisfied(_,prescribe) &amp; failed(_,handleMissingMedicine2)" />-->
                    <handling-goal id="handleMissingPrescribePharmacist" />
                </exception-specification>

            </notification-policy>

            <mission id="mPatient" min="1" max="1">
                <goal id="complain" />
                <goal id="takePills" />
                <goal id="raiseMissingMedicine" />
                <goal id="raiseMissingPrescribePatient" />
            </mission>
            
            <mission id="mDoctor" min="1" max="1">
                <goal id="prescribe" />
                <goal id="handleMissingPrescribePatient" />
                <goal id="handleMissingPrescribePharmacist" />
            </mission>
            
            <mission id="mPharmacist" min="1" max="1">
                <goal id="medicine" />
                <goal id="handleMissingMedicine1" />
                <goal id="handleMissingMedicine2" />
                <goal id="raiseMissingPrescribePharmacist" />
            </mission>

        </scheme>

    </functional-specification>

    <normative-specification>
        <norm id="n1" type="obligation" role="patient"    mission="mPatient" />
        <norm id="n2" type="obligation" role="doctor"     mission="mDoctor" />
        <norm id="n3" type="obligation" role="pharmacist" mission="mPharmacist" />
    </normative-specification>

</organisational-specification>
